<% book.book_comments.each do |book_comment| %>
  <%= image_tag book_comment.user.get_profile_image, size:"60x60" %>
  <%= book_comment.comment %>
  <% if book_comment.user == current_user %>
    <%=link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger btn-sm mt-3" %>
  <% end %>
  <br>
  <%= link_to book_comment.user.name, user_path(book_comment.user_id) %><br>
<% end %>